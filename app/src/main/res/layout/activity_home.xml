<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="定位"
                    android:gravity="center_vertical"
                    />

                <LinearLayout
                    android:id="@+id/search"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/shape2"
                    >
                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/search"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:hint="搜索"
                        android:inputType="text"
                        android:visibility="visible"
                        tools:visibility="visible"
                        android:gravity="center_vertical"
                        />

                </LinearLayout>


            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:src="@drawable/home"
                android:background="@drawable/shape1"
                android:scaleType="fitXY" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:orientation="vertical"
                android:layout_marginTop="15dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                    <TextView
                        android:layout_width="140dp"
                        android:layout_height="75dp"
                        android:text="景点人气榜"
                        android:paddingLeft="10dp"
                        android:textSize="20dp"
                        android:gravity="center_vertical"
                        android:background="@drawable/shape_home1"
                        android:textColor="#ffffff"
                        />
                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="75dp"
                        android:text="美食人气榜"
                        android:paddingLeft="10dp"
                        android:layout_marginLeft="5dp"
                        android:textSize="20dp"
                        android:gravity="center_vertical"
                        android:background="@color/b"
                        android:textColor="#ffffff"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        android:text="购物"
                        android:paddingLeft="10dp"
                        android:textSize="20dp"
                        android:gravity="center_vertical"
                        android:background="@drawable/shape_home2"
                        android:layout_marginLeft="5dp"
                        android:textColor="#ffffff"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="#ffffff"
                    >
                    <TextView
                        android:layout_width="140dp"
                        android:layout_height="100dp"
                        android:text="主题圈"
                        android:paddingLeft="10dp"
                        android:textSize="20dp"
                        android:gravity="center_vertical"
                        android:background="@drawable/shape_home3"
                        android:textColor="#ffffff"
                        />
                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="80dp"
                        android:text="热门圈"
                        android:paddingLeft="10dp"
                        android:layout_marginLeft="5dp"
                        android:textSize="20dp"
                        android:gravity="center_vertical"
                        android:background="@color/d"
                        android:textColor="#ffffff"
                        android:layout_gravity="bottom"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:paddingLeft="10dp"
                        android:gravity="center_vertical"
                        android:background="@drawable/shape_home4"
                        android:layout_marginLeft="5dp"
                        android:textColor="#ffffff"
                        android:layout_gravity="bottom"
                        />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="旅行发现"
                android:textSize="25dp"
                android:gravity="center_vertical"
                />


            <ListView
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="355dp"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="10dp">



            </ListView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                >

            </LinearLayout>



        </LinearLayout>


    </ScrollView>

</LinearLayout>
